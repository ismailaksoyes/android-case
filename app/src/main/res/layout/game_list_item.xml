<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cv_game_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_game_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_game_name"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/iv_game_poster"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_game_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cv_game_poster"
        app:layout_constraintBottom_toTopOf="@id/tv_rating_released"
        app:layout_constraintStart_toEndOf="@id/cv_game_poster"
        style="@style/text_normal_style"
        android:layout_marginStart="20dp"
        android:text="GAME OF NAME"/>
    <TextView
        android:id="@+id/tv_rating_released"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_game_name"
        app:layout_constraintStart_toEndOf="@id/cv_game_poster"
        app:layout_constraintBottom_toBottomOf="@id/cv_game_poster"
        style="@style/text_medium_style"
        android:layout_marginStart="20dp"
        android:text="Rating - released"/>

</androidx.constraintlayout.widget.ConstraintLayout>

